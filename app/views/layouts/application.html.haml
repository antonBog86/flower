!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Flower1
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
  %body
    / <div id='fb-root'></div>
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"}
            = "#{ I18n.t :s_name} #{ I18n.t :f_name} #{ I18n.t :t_name}"
          .container.nav-collapse
            %ul.nav
              %li
              %li
            .container.langswitch{:style => "line-height: 5px; margin-top: 15px; margin-left: 1165px; "}
              = link_to "En", {:controller => "home", :action => "change_locale", :locale => "en"}, :id => "en"
              |
              \#{link_to "Рус", {:controller => "home", :action => "change_locale", :locale => "ru"}, :id => "ru"} |
              \#{link_to "Укр", {:controller => "home", :action => "change_locale", :locale => "ua"}, :id => "ua"}
    / /.nav-collapse
    .container
      .content
        .row
          .span9
            = yield
            .back_link_block
          .span3
            .well.sidebar-nav{:style => "margin-top:64px"}
              %h3
                %a{:href => "<haml_loud"}
                  categories_path  style="color:black; text-decoration:none">#{t :collection}
              %ul.nav.nav-list
                / <li class="nav-header">Sidebar</li>
                - session[:categories].each do |category|
                  %li= link_to category.name, category_path(category)
                  - session[:subcategories].select{|i| i.category_id == category.id}.each do |subcategory|
                    %ul
                      %li= link_to subcategory.name, category_subcategory_path(category,subcategory)
            / /.well
            #image_info_block
    / /span
    / /row
    / /content
    / /container
    %footer.footer
      #footer.navbar.navbar-fixed-bottom
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            .container.nav-collapse
              %ul.nav
                %li
                  %a{:href => "<haml_loud"}
                    page_path("about")>#{t :about}
                %li
                  %a{:href => "<haml_loud"}
                    page_path("support")>#{t :contacts}
                %li
                  %a{:href => "<haml_loud"}
                    page_path("contacts")>#{t :support}
              %ul.nav.pull-right
                %li
                  = link_to "Welcome Page", admin_signed_in? ? root_url + "admin": root_url
                - if admin_signed_in?
                  %li
                    = link_to "Logout", destroy_admin_session_path, :method => :delete
        / /.nav-collapse
        /
          Le javascript
          \==================================================
        / Placed at the end of the document so the pages load faster
        = javascript_include_tag "application"
